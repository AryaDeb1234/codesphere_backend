<!DOCTYPE html>
<html>
<head>
  <title>Live Search</title>
  <style>
    .suggestions {
      border: 1px solid #ccc;
      max-width: 300px;
      margin-top: 5px;
      background-color: #fff;
      position: absolute;
    }
    .suggestion-item {
      padding: 8px;
      cursor: pointer;
    }
    .suggestion-item:hover {
      background-color: #f0f0f0;
    }
  </style>
</head>
<body>
  <h2>Search User</h2>
  <input type="text" id="searchBox" placeholder="Start typing a name..." autocomplete="off" />
  <div id="suggestions" class="suggestions"></div>

  <script>
  const searchBox = document.getElementById("searchBox");
  const suggestionsDiv = document.getElementById("suggestions");

  searchBox.addEventListener("keyup", async () => {
    const query = searchBox.value.trim();

    if (query.length === 0) {
      suggestionsDiv.innerHTML = "";
      return;
    }

    try {
      const response = await fetch(`/suggest?q=${query}`);
      const users = await response.json();

      suggestionsDiv.innerHTML = "";
      if (users.length === 0) {
        suggestionsDiv.innerHTML = "<div class='suggestion-item'>No matches found</div>";
        return;
      }

      users.forEach(user => {
        const div = document.createElement("div");
        div.classList.add("suggestion-item");
        div.innerHTML = `<img src="${user.avatar}" alt="avatar" width="30" style="border-radius:50%; vertical-align:middle;"> 
                         <span style="margin-left:10px;">${user.name}</span>`;
        div.onclick = () => {
          window.location.href = `/user/${user._id}/full`; // ‚Üê updated here
        };
        suggestionsDiv.appendChild(div);
      });
    } catch (err) {
      console.error("Error fetching suggestions:", err);
    }
  });
</script>

</body>
</html>
